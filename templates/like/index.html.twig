{% extends 'layout.html.twig' %}

{% block title %}Hello LikeController!{% endblock %}

{% block main %}

    <a href="{{ path('add_like') }}" class="btn btn-success">Add Like</a>
    {{ form_start(filterForm) }}
    <div class="search form-inline my-2 my-lg-0">
        {{ form_row(filterForm.search) }}
        {{ form_row(filterForm.submit) }}
    </div>
    {{ form_end(filterForm) }}

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Person</th>
            <th scope="col">Product</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for data in likeData %}
            <tr>
                <th scope="row">{{ data.id }}</th>
                <td>{{ data.login }}</td>
                <td>{{ data.name }}</td>
                <td><a href="{{ path('edit_like', {id: data.id}) }}" class="btn btn-primary">Edytuj</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
