{% extends 'layout.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block main %}

    <a href="{{ path('add_product') }}" class="btn btn-success">Add Product</a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Info</th>
            <th scope="col">Public Date</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for data in productData %}
            <tr>
                <th scope="row">{{ data.id }}</th>
                <td>{{ data.name }}</td>
                <td>{{ data.info }}</td>
                <td>{{ data.publicdate|date("d/m/Y") }}</td>
                <td><a href="{{ path('edit_product', {id: data.id}) }}" class="btn btn-primary">Edytuj</a> <a href="{{ path('delete_product', {id: data.id}) }}" class="btn btn-danger">Usu≈Ñ</a> </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
