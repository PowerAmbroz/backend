{% extends 'layout.html.twig' %}

{% block title %}Hello PersonController!{% endblock %}

{% block main %}
    <div class="add">
        <a href="{{ path('add_person') }}" class="btn btn-success">Add Person</a>
    </div>
    {{ form_start(filterForm) }}
    <div class="search form-inline my-2 my-lg-0">
        {{ form_row(filterForm.search) }}
        {{ form_row(filterForm.submit) }}
    </div>
    {{ form_end(filterForm) }}

    <table id="personTable" class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Login</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">State</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for data in personData %}
        <tr>
            <td scope="row">{{ data.id }}</td>
            <td>{{ data.login }}</td>
            <td>{{ data.fname }}</td>
            <td>{{ data.lname }}</td>
            {% if data.state == 1 %}
                <td>aktywny</td>
            {% elseif data.state == 2 %}
                <td>banned</td>
            {% else %}
                <td>usuniety</td>
            {% endif %}

            <td><a href="{{ path('edit_person', {id: data.id}) }}" class="btn btn-primary">Edytuj</a> <a href="{{ path('delete_person', {id: data.id}) }}" class="btn btn-danger">Usu≈Ñ</a> </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
